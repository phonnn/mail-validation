# Production Environment Configuration for 1000 Users
# Copy this file to .env and update values for your production environment

# Application Configuration
APP_NAME=mail-validation-backend
APP_ENV=production
APP_URL=http://localhost:3000
APP_PORT=3000
APP_HOST=0.0.0.0

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=mail-validation-storage
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=false
DATABASE_AUTOLOAD_ENTITIES=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URI=redis://localhost:6379

# SMTP Probe Configuration - High Concurrency Settings
SMTP_PROBE_MAX_CONNECTIONS_PER_HOST=50
SMTP_PROBE_CONNECTION_TIMEOUT=10000
SMTP_PROBE_RESPONSE_TIMEOUT=5000
SMTP_PROBE_CACHE_TTL=3600
SMTP_PROBE_MAX_PROBES_PER_DOMAIN=10
SMTP_PROBE_MAX_PROBES_PER_MX=5
SMTP_PROBE_RATE_LIMIT_WINDOW=60000
SMTP_PROBE_FAKE_SENDER=test@example.com
SMTP_PROBE_MAX_RESPONSE_LENGTH=512
SMTP_PROBE_DEFAULT_TIMEOUT=15000
SMTP_PROBE_DEFAULT_READ_TIMEOUT=5000
SMTP_PROBE_DEFAULT_CONNECTION_TIMEOUT=10000
SMTP_PROBE_MAX_RETRIES=2
SMTP_PROBE_RETRY_DELAY=500
SMTP_PROBE_RETRY_BACKOFF_MULTIPLIER=2
SMTP_PROBE_SMTP_PORT=25
SMTP_PROBE_SUBMISSION_PORT=587
SMTP_PROBE_SMTPS_PORT=465
SMTP_PROBE_CACHE_KEY_PREFIX=smtp:probe:

# High Concurrency Settings for 1000 Users
SMTP_PROBE_MAX_CONCURRENT_JOBS=500
SMTP_PROBE_MAX_CONCURRENT_CONNECTIONS=1000
SMTP_PROBE_CONNECTION_POOL_SIZE=200
SMTP_PROBE_QUEUE_CONCURRENCY=100
SMTP_PROBE_BATCH_SIZE=50
SMTP_PROBE_MAX_BATCH_SIZE=100

# Rate Limiting for Abuse Prevention
SMTP_PROBE_MAX_REQUESTS_PER_MINUTE=100
SMTP_PROBE_MAX_REQUESTS_PER_HOUR=1000
SMTP_PROBE_MAX_EMAILS_PER_USER=1000

# Performance Tuning
SMTP_PROBE_KEEP_ALIVE_TIMEOUT=30000
SMTP_PROBE_MAX_IDLE_CONNECTIONS=50
SMTP_PROBE_CONNECTION_REUSE_TIMEOUT=60000

# SMTP Infrastructure Configuration
SMTP_INFRASTRUCTURE_MAX_CONNECTIONS_PER_HOST=50
SMTP_INFRASTRUCTURE_CONNECTION_TIMEOUT=10000
SMTP_INFRASTRUCTURE_RESPONSE_TIMEOUT=5000
SMTP_INFRASTRUCTURE_MAX_CONCURRENT_CONNECTIONS=1000
SMTP_INFRASTRUCTURE_CONNECTION_POOL_SIZE=200
SMTP_INFRASTRUCTURE_KEEP_ALIVE_TIMEOUT=30000
SMTP_INFRASTRUCTURE_MAX_IDLE_CONNECTIONS=50
SMTP_INFRASTRUCTURE_CONNECTION_REUSE_TIMEOUT=60000

# SMTP Infrastructure Rate Limiting
SMTP_INFRASTRUCTURE_MAX_REQUESTS_PER_MINUTE=100
SMTP_INFRASTRUCTURE_MAX_REQUESTS_PER_HOUR=1000
SMTP_INFRASTRUCTURE_MAX_EMAILS_PER_USER=1000
SMTP_INFRASTRUCTURE_GLOBAL_RCPT_RATE_LIMIT=1000
SMTP_INFRASTRUCTURE_PER_MX_RCPT_RATE_LIMIT=100

# SMTP Infrastructure Advanced Features
SMTP_INFRASTRUCTURE_ENABLE_MX_SHARDING=true
SMTP_INFRASTRUCTURE_ENABLE_PIPELINING=true
SMTP_INFRASTRUCTURE_MAX_RCPT_PER_SESSION=30
SMTP_INFRASTRUCTURE_MAX_CONCURRENT_SESSIONS=200

# SMTP Infrastructure IP Warm-up
SMTP_INFRASTRUCTURE_ENABLE_IP_WARMUP=true
SMTP_INFRASTRUCTURE_WARMUP_INITIAL_LEVEL=1
SMTP_INFRASTRUCTURE_WARMUP_SUCCESS_THRESHOLD=0.95

# SMTP Infrastructure TCP Optimization
SMTP_INFRASTRUCTURE_TCP_NO_DELAY=true
SMTP_INFRASTRUCTURE_TCP_KEEP_ALIVE=true
SMTP_INFRASTRUCTURE_TCP_KEEP_ALIVE_INITIAL_DELAY=1000
SMTP_INFRASTRUCTURE_SOCKET_BUFFER_SIZE=65536

# SMTP Infrastructure IP Hygiene
SMTP_INFRASTRUCTURE_ENABLE_REVERSE_DNS=true
SMTP_INFRASTRUCTURE_ENABLE_SPF_CHECK=true
SMTP_INFRASTRUCTURE_ENABLE_BLACKLIST_CHECK=true

# SMTP Infrastructure Performance Monitoring
SMTP_INFRASTRUCTURE_PERFORMANCE_MONITORING_INTERVAL=30000
SMTP_INFRASTRUCTURE_MAX_METRICS_HISTORY=1000
SMTP_INFRASTRUCTURE_MAX_ALERTS_HISTORY=100

# SMTP Infrastructure Caching
SMTP_INFRASTRUCTURE_CACHE_TTL=3600
SMTP_INFRASTRUCTURE_CACHE_KEY_PREFIX=smtp:infrastructure:

# SMTP Infrastructure IP Rotation
SMTP_INFRASTRUCTURE_IP_ROTATION_CONFIG_PATH=./config/ip-rotation.json
SMTP_INFRASTRUCTURE_IP_ROTATION_ENABLED=true
SMTP_INFRASTRUCTURE_IP_ROTATION_INTERVAL=300
SMTP_INFRASTRUCTURE_IP_HEALTH_CHECK_INTERVAL=60

# Authentication (if implemented)
AUTH_JWT_SECRET=your-super-secret-jwt-key-here
AUTH_JWT_EXPIRED=3600
AUTH_SALT_SIZE=10
